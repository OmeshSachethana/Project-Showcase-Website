---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Showcase of my web development projects" />
    <link rel="icon" type="image/svg+xml" href="/project-icon.png" />
    <link rel="icon" type="image/x-icon" href="/project-icon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Project Showcase | My Portfolio</title>
  </head>
  <body class="bg-gray-50 text-gray-900">
    <div class="flex flex-col min-h-screen">
      <Header />
      <main class="flex-grow">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>