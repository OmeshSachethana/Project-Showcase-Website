---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import ProjectCard from "../components/ProjectCard.astro";
import { projects } from "../data/projects.js";
---

<Layout>
  <Hero />
  
  <section id="projects" class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          My <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-500 to-blue-600">Projects</span>
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Here are some of my favorite projects I've built. Each project demonstrates different skills and technologies.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => (
          <ProjectCard project={project} />
        ))}
      </div>
    </div>
  </section>
  
  <section id="about" class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-4xl font-bold text-gray-900 mb-6">
              About <span class="text-cyan-600">Me</span>
            </h2>
            <p class="text-gray-700 mb-4">
              I'm a passionate full-stack developer with expertise in modern web and mobile technologies. 
              I love building applications that solve real-world problems and provide great user experiences.
            </p>
            <p class="text-gray-700 mb-6">
              My journey in web and mobile application development started 3 years ago, and since then I've worked on various projects 
              ranging from simple websites to complex web applications.
            </p>
            <div class="flex flex-wrap gap-4">
              <div class="px-6 py-3 bg-white rounded-lg shadow-sm">
                <div class="text-2xl font-bold text-cyan-600">100+</div>
                <div class="text-gray-600">Projects</div>
              </div>
              <div class="px-6 py-3 bg-white rounded-lg shadow-sm">
                <div class="text-2xl font-bold text-blue-600">20+</div>
                <div class="text-gray-600">Technologies</div>
              </div>
              <div class="px-6 py-3 bg-white rounded-lg shadow-sm">
                <div class="text-2xl font-bold text-green-600">3+</div>
                <div class="text-gray-600">Years Experience</div>
              </div>
            </div>
          </div>
          
          <div class="bg-gradient-to-br from-cyan-500 to-blue-600 p-1 rounded-2xl">
            <div class="bg-white p-8 rounded-xl">
              <h3 class="text-2xl font-bold text-gray-900 mb-6">Skills & Technologies</h3>
              <div class="space-y-4">
                {[
                  { skill: "Frontend", level: 90, tech: "React, Vue, Angular, Astro, React-Native, Flutter" },
                  { skill: "Backend", level: 85, tech: "Node.js, Express, Python, FastApi" },
                  { skill: "Databases", level: 80, tech: "MongoDB, PostgreSQL, Firebase" },
                  { skill: "DevOps", level: 75, tech: "Docker, AWS, CI/CD" },
                ].map((item) => (
                  <div>
                    <div class="flex justify-between mb-1">
                      <span class="font-medium text-gray-700">{item.skill}</span>
                      <span class="text-sm text-gray-500">{item.level}%</span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2">
                      <div 
                        class="bg-gradient-to-r from-cyan-500 to-blue-600 h-2 rounded-full" 
                        style={{ width: `${item.level}%` }}
                      ></div>
                    </div>
                    <div class="text-sm text-gray-500 mt-1">{item.tech}</div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <section id="contact" class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">
          Get In <span class="text-cyan-600">Touch</span>
        </h2>
        <p class="text-xl text-gray-600 mb-12">
          Have a project in mind? Let's work together to bring your ideas to life.
        </p>
        
        <div class="bg-gray-50 rounded-2xl p-8 shadow-lg">
          <form class="space-y-6">
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label class="block text-gray-700 mb-2 font-medium">Name</label>
                <input type="text" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent" placeholder="Your name" />
              </div>
              <div>
                <label class="block text-gray-700 mb-2 font-medium">Email</label>
                <input type="email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent" placeholder="your@email.com" />
              </div>
            </div>
            
            <div>
              <label class="block text-gray-700 mb-2 font-medium">Message</label>
              <textarea class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent" rows="4" placeholder="Your message..."></textarea>
            </div>
            
            <button type="submit" class="w-full py-4 bg-gradient-to-r from-cyan-500 to-blue-600 text-white font-semibold rounded-lg hover:shadow-lg hover:shadow-cyan-500/25 transition-all duration-300">
              Send Message
            </button>
          </form>
          
          <div class="mt-8 pt-8 border-t border-gray-200">
            <p class="text-gray-600 mb-4">Or reach out directly:</p>
            <div class="flex justify-center space-x-6">
              <a href="mailto:hello@example.com" class="text-cyan-600 hover:text-cyan-700 font-medium">
                sachethana12@gmail.com
              </a>
              <span class="text-gray-300">|</span>
              <a href="tel:+1234567890" class="text-cyan-600 hover:text-cyan-700 font-medium">
                +94 76 000 2554
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>