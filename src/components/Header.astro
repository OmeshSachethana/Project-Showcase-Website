---
import { useState } from 'preact/hooks';
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-md border-b border-gray-200/50 shadow-sm">
  <nav class="container mx-auto px-4 py-3">
    <div class="flex justify-between items-center">
      <!-- Logo/Brand -->
      <a href="#" class="flex items-center space-x-3 group">
        <div class="relative">
          <div class="w-10 h-10 bg-gradient-to-br from-cyan-500 to-blue-600 rounded-xl flex items-center justify-center shadow-lg shadow-cyan-500/20 group-hover:shadow-cyan-500/30 transition-shadow duration-300">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
            </svg>
          </div>
          <div class="absolute -inset-1 bg-gradient-to-r from-cyan-500 to-blue-600 rounded-xl opacity-0 group-hover:opacity-20 blur transition-opacity duration-300"></div>
        </div>
        <div class="flex flex-col">
          <span class="text-2xl font-bold bg-gradient-to-r from-cyan-600 to-blue-600 bg-clip-text text-transparent">
            DevPortfolio
          </span>
          <span class="text-xs text-gray-500 font-medium">Web Developer</span>
        </div>
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-1">
        <a 
          href="#home" 
          class="relative px-6 py-2 text-gray-700 font-medium rounded-lg hover:text-cyan-600 transition-colors duration-300 group"
        >
          <span class="relative z-10">Home</span>
          <span class="absolute inset-0 bg-gradient-to-r from-cyan-500/0 to-blue-600/0 rounded-lg group-hover:from-cyan-500/5 group-hover:to-blue-600/5 transition-all duration-300"></span>
        </a>
        
        <a 
          href="#projects" 
          class="relative px-6 py-2 text-gray-700 font-medium rounded-lg hover:text-cyan-600 transition-colors duration-300 group"
        >
          <span class="relative z-10">Projects</span>
          <span class="absolute inset-0 bg-gradient-to-r from-cyan-500/0 to-blue-600/0 rounded-lg group-hover:from-cyan-500/5 group-hover:to-blue-600/5 transition-all duration-300"></span>
        </a>
        
        <a 
          href="#about" 
          class="relative px-6 py-2 text-gray-700 font-medium rounded-lg hover:text-cyan-600 transition-colors duration-300 group"
        >
          <span class="relative z-10">About</span>
          <span class="absolute inset-0 bg-gradient-to-r from-cyan-500/0 to-blue-600/0 rounded-lg group-hover:from-cyan-500/5 group-hover:to-blue-600/5 transition-all duration-300"></span>
        </a>
        
        <a 
          href="#contact" 
          class="relative px-6 py-2 text-gray-700 font-medium rounded-lg hover:text-cyan-600 transition-colors duration-300 group"
        >
          <span class="relative z-10">Contact</span>
          <span class="absolute inset-0 bg-gradient-to-r from-cyan-500/0 to-blue-600/0 rounded-lg group-hover:from-cyan-500/5 group-hover:to-blue-600/5 transition-all duration-300"></span>
        </a>
        
        <!-- Call to Action Button -->
        <a 
          href="#contact" 
          class="ml-4 px-6 py-2.5 bg-gradient-to-r from-cyan-500 to-blue-600 text-white font-medium rounded-lg hover:shadow-lg hover:shadow-cyan-500/25 transition-all duration-300 transform hover:-translate-y-0.5"
        >
          Hire Me
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-button"
        class="md:hidden w-10 h-10 flex items-center justify-center bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors duration-200"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M4 6h16M4 12h16M4 18h16"
          />
        </svg>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <div 
      id="mobile-menu"
      class="md:hidden mt-4 p-6 bg-white rounded-xl shadow-xl border border-gray-200 hidden"
    >
      <div class="flex flex-col space-y-4">
        <a 
          href="#home" 
          class="flex items-center px-4 py-3 text-gray-700 font-medium rounded-lg hover:bg-cyan-50 hover:text-cyan-600 transition-all duration-200 group"
        >
          <svg class="w-5 h-5 mr-3 text-gray-400 group-hover:text-cyan-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          Home
        </a>
        
        <a 
          href="#projects" 
          class="flex items-center px-4 py-3 text-gray-700 font-medium rounded-lg hover:bg-cyan-50 hover:text-cyan-600 transition-all duration-200 group"
        >
          <svg class="w-5 h-5 mr-3 text-gray-400 group-hover:text-cyan-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
          Projects
          <span class="ml-auto px-2 py-1 text-xs font-medium bg-cyan-100 text-cyan-800 rounded-full">
            6
          </span>
        </a>
        
        <a 
          href="#about" 
          class="flex items-center px-4 py-3 text-gray-700 font-medium rounded-lg hover:bg-cyan-50 hover:text-cyan-600 transition-all duration-200 group"
        >
          <svg class="w-5 h-5 mr-3 text-gray-400 group-hover:text-cyan-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          About
        </a>
        
        <a 
          href="#contact" 
          class="flex items-center px-4 py-3 text-gray-700 font-medium rounded-lg hover:bg-cyan-50 hover:text-cyan-600 transition-all duration-200 group"
        >
          <svg class="w-5 h-5 mr-3 text-gray-400 group-hover:text-cyan-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Contact
        </a>
        
        <div class="pt-4 border-t border-gray-200">
          <a 
            href="#contact" 
            class="block w-full py-3 text-center bg-gradient-to-r from-cyan-500 to-blue-600 text-white font-medium rounded-lg hover:shadow-lg hover:shadow-cyan-500/25 transition-all duration-300"
          >
            Get in Touch
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle functionality
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
      mobileMenu.classList.toggle('animate-fadeIn');
      
      // Toggle hamburger icon
      const svg = mobileMenuButton.querySelector('svg');
      const isOpen = !mobileMenu.classList.contains('hidden');
      
      if (isOpen) {
        // Change to close icon
        svg.innerHTML = `
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        `;
      } else {
        // Change back to hamburger icon
        svg.innerHTML = `
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        `;
      }
    });
    
    // Close mobile menu when clicking outside
    document.addEventListener('click', (event) => {
      if (!mobileMenuButton.contains(event.target) && !mobileMenu.contains(event.target)) {
        mobileMenu.classList.add('hidden');
        mobileMenu.classList.remove('animate-fadeIn');
        
        // Reset to hamburger icon
        const svg = mobileMenuButton.querySelector('svg');
        svg.innerHTML = `
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        `;
      }
    });
    
    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        const href = this.getAttribute('href');
        
        if (href !== '#') {
          e.preventDefault();
          
          // Close mobile menu if open
          if (!mobileMenu.classList.contains('hidden')) {
            mobileMenu.classList.add('hidden');
            const svg = mobileMenuButton.querySelector('svg');
            svg.innerHTML = `
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            `;
          }
          
          const targetElement = document.querySelector(href);
          if (targetElement) {
            window.scrollTo({
              top: targetElement.offsetTop - 80,
              behavior: 'smooth'
            });
          }
        }
      });
    });
  });
</script>

<style>
  /* Custom animations */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fadeIn {
    animation: fadeIn 0.3s ease-out forwards;
  }
  
  /* Active link indicator */
  .active-nav-link {
    position: relative;
    color: #06b6d4;
  }
  
  .active-nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 50%;
    transform: translateX(-50%);
    width: 6px;
    height: 6px;
    background: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%);
    border-radius: 50%;
  }
  
  /* Logo hover effect */
  .logo-glow {
    position: relative;
  }
  
  .logo-glow::after {
    content: '';
    position: absolute;
    inset: -2px;
    background: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%);
    border-radius: 12px;
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .logo-glow:hover::after {
    opacity: 0.3;
  }
</style>